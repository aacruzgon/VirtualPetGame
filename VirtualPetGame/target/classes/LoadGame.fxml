<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="loadGameRoot" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" >
    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" pickOnBounds="true" preserveRatio="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <image>
            <Image url="@Sprites/sky.png" />
        </image>
    </ImageView>

    <!-- HBox for Title -->
    <HBox fx:id="loadGameTitleContainer" alignment="CENTER" layoutX="13.0" prefWidth="1779.0" spacing="10.0" AnchorPane.leftAnchor="13.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0">
        <children>
            <AnchorPane fx:id="titlePane">
                <children>
                    <ImageView fitHeight="131.0" fitWidth="828.0" layoutX="-92.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@Sprites/savedFiles.png" />
                        </image>
                    </ImageView>
                </children>
            </AnchorPane>
        </children>
    </HBox>

    <!-- ScrollPane for Save Files -->
    <ScrollPane fx:id="loadGameScrollPane" style="-fx-background-color: transparent; -fx-background: transparent;" layoutX="102.0" layoutY="203.0" AnchorPane.bottomAnchor="165.0" AnchorPane.leftAnchor="102.0" AnchorPane.rightAnchor="88.0" AnchorPane.topAnchor="203.0">
        <content>
            <VBox fx:id="boxx" alignment="CENTER" layoutX="102.0" layoutY="203.0" spacing="20.0" style="-fx-alignment: center;">
                <VBox fx:id="saveFileContainer" alignment="CENTER" layoutX="102.0" layoutY="203.0" spacing="20.0">
                    <!-- Placeholder for dynamic save file buttons -->
                </VBox>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>
